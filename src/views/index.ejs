<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.css" rel="stylesheet" />
    <title>Crear pago</title>
</head>

<body>

    <header>

        <nav class="bg-white mb-5">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <img src="/images/logo.png" class="me-2" height="50" loading="lazy" />
                </a>
            </div>
        </nav>


    </header>


    <main>

        <div class="container">

            <div class="row align-items-center justify-content-center py-5">

                <div class="col-12 w-25">

                    <h2>Crear pago</h2>

                    <form class="form" action="/procces" method="post">

                        <label class="form-label" for="concepto">Importe a pagar</label>
                        <div class="form-outline mb-4">
                            <input type="text" id="importe" name="importe" placeholder="56,06 EUR"
                                class="form-control" />
                        </div>

                        <label class="form-label" for="monto">Concepto</label>
                        <div class="form-outline mb-4">
                            <input type="text" id="concepto" name="concepto" placeholder="Compra de XXXXX"
                                class="form-control" />
                        </div>

                        <div class="form-outline mb-4">
                            <label class="form-label" for="moneda">Seleccione moneda</label>
                            <select class="form-select" for="moneda" name="moneda" id="moneda">
                                <% result.forEach((item)=> { %>
                                    <option value=<%=item.symbol%> type="text"><%=item.name%>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block my-5">Crear pago</button>

                        <p class="errores"></p>

                    </form>

                </div>

            </div>

        </div>


    </main>

    <footer class="text-center text-white fixed-bottom">
        <!-- Copyright -->
        <div class="text-center pb-5">
            <img src="/images/footer.png" alt="" style="height: 80px;">
        </div>
        <!-- Copyright -->
    </footer>

    <!-- MDB -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.js"></script>
    <script src="/js/validationsIndex.js"></script>

</body>

</html>